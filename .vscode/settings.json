{
  "ruby.format": "rubocop",
  "ruby.lint": {
    "rubocop": true,
    "brakeman": true
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.rubocop": "explicit"
  },
  "files.associations": {
    "*.html.erb": "erb",
    "*.js.erb": "javascript"
  },
  "tailwindCSS.includeLanguages": {
    "erb": "html",
    "ruby": "html"
  },
  "tailwindCSS.emmetCompletions": true,
  "emmet.includeLanguages": {
    "erb": "html"
  }
}
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mb-4">
    <%= link_to admin_root_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Admin Dashboard
    <% end %>
  </div>

  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-bold text-gray-900">Add Schedule Status Type</h1>
      <p class="mt-2 text-sm text-gray-700">Create a new schedule status option</p>
    </div>
  </div>

  <div class="mt-8">
    <%= form_with model: [:admin, @schedule_status], local: true, class: "space-y-6" do |form| %>
      <% if @schedule_status.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@schedule_status.errors.count, "error") %> prohibited this status from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul role="list" class="list-disc space-y-1 pl-5">
                  <% @schedule_status.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm", placeholder: "office" %>
              <p class="mt-2 text-sm text-gray-500">Internal identifier (lowercase, no spaces)</p>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :display_name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :display_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm", placeholder: "Office" %>
              <p class="mt-2 text-sm text-gray-500">Display name shown to users</p>
            </div>

            <div class="sm:col-span-4">
              <%= form.label :color_class, class: "block text-sm font-medium text-gray-700" %>
              <%= form.select :color_class, options_for_select([
                ["Blue (Office)", "bg-blue-100 text-blue-800"],
                ["Green (Work from Home)", "bg-green-100 text-green-800"],
                ["Purple (Vacation)", "bg-purple-100 text-purple-800"],
                ["Red (Out of Office)", "bg-red-100 text-red-800"],
                ["Yellow (Travel)", "bg-yellow-100 text-yellow-800"],
                ["Gray (TBD)", "bg-gray-100 text-gray-800"],
                ["Indigo", "bg-indigo-100 text-indigo-800"],
                ["Pink", "bg-pink-100 text-pink-800"],
                ["Orange", "bg-orange-100 text-orange-800"]
              ], @schedule_status.color_class), { prompt: "Select a color" }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm" } %>
              <p class="mt-2 text-sm text-gray-500">Color scheme for status badges</p>
            </div>

            <div class="sm:col-span-2">
              <%= form.label :sort_order, class: "block text-sm font-medium text-gray-700" %>
              <%= form.number_field :sort_order, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm" %>
              <p class="mt-2 text-sm text-gray-500">Display order (lower numbers first)</p>
            </div>

            <div class="sm:col-span-6">
              <div class="relative flex items-start">
                <div class="flex h-5 items-center">
                  <%= form.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= form.label :active, "Active", class: "font-medium text-gray-700" %>
                  <p class="text-gray-500">Allow users to select this status</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", admin_schedule_statuses_path, class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
        <%= form.submit "Create Status Type", class: "rounded-md border border-transparent bg-purple-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>
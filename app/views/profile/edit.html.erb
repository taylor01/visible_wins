<div class="bg-gray-50 py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="mb-6">
          <h1 class="text-2xl font-bold text-gray-900">Edit Profile</h1>
          <p class="mt-1 text-sm text-gray-600">Update your team membership and profile information.</p>
        </div>

        <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-6" do |form| %>
          <% if @user.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">There were some errors with your submission:</h3>
                  <ul class="mt-2 text-sm text-red-700">
                    <% @user.errors.full_messages.each do |message| %>
                      <li>â€¢ <%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Read-only OIDC Information -->
          <div>
            <h3 class="text-lg font-medium text-gray-900 mb-4">Account Information (from Okta)</h3>
            <div class="bg-gray-50 rounded-md p-4">
              <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Name</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @user.full_name %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Email</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @user.email %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Role</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @user.role %></dd>
                </div>
              </dl>
              <p class="mt-3 text-xs text-gray-500">
                This information is managed through Okta and cannot be changed here.
              </p>
            </div>
          </div>

          <!-- Team Membership Selection -->
          <div>
            <label for="user_team_id" class="block text-sm font-medium text-gray-700 mb-2">
              Team Membership <span class="text-red-500">*</span>
            </label>
            <p class="text-sm text-gray-600 mb-4">Select the team that best describes your role and responsibilities.</p>
            
            <%= form.select :team_id, 
                options_from_collection_for_select(@teams, :id, :name, @user.team_id), 
                { prompt: "Select your team..." }, 
                { 
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                  required: true
                } %>
          </div>

          <!-- Action Buttons -->
          <div class="flex justify-between">
            <%= link_to "Cancel", profile_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            
            <%= form.submit "Save Profile", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
